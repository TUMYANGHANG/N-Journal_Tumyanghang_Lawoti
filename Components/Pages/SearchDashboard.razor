@page "/search"
@inject AuthService AuthService
@inject JournalService JournalService
@inject NavigationManager Navigation
@inject IJSRuntime JSRuntime
@using N_Journal_Tumyanghang_Lawoti.Models
@using Markdig

<PageTitle>Search Dashboard - N-Journal</PageTitle>

@if (!AuthService.IsAuthenticated)
{
    <RedirectToLogin />
}
else
{
    <div class="container-fluid mt-4">
        <div class="row">
            <div class="col-12 mb-4">
                <h1 class="mb-2">Search Dashboard</h1>
                <p class="text-muted">Search and filter your journal entries with advanced options</p>
            </div>
        </div>

        <div class="row">
            <!-- Search & Filter Panel -->
            <div class="col-lg-4 col-md-5 mb-4">
                <div class="filter-panel card shadow-lg sticky-top">
                    <div class="card-header filter-header">
                        <div class="d-flex align-items-center justify-content-between">
                            <h5 class="mb-0 fw-bold">
                                <span class="bi bi-funnel-fill me-2"></span>Search & Filter
                            </h5>
                            @if (filtersActive || HasActiveFilters())
                            {
                                <span class="badge filter-badge-active">
                                    <span class="bi bi-check-circle me-1"></span>Active
                                </span>
                            }
                        </div>
                    </div>
                    <div class="card-body filter-body">
                        <!-- Search Input -->
                        <div class="filter-section">
                            <label class="filter-label">
                                <span class="bi bi-search filter-icon"></span>Search Keywords
                            </label>
                            <div class="input-group input-group-lg">
                                <span class="input-group-text bg-white border-end-0">
                                    <span class="bi bi-search text-muted"></span>
                                </span>
                                <InputText class="form-control border-start-0 ps-0" @bind-Value="searchTerm" 
                                          placeholder="Search in titles and content..." 
                                          @onkeypress="HandleSearchKeyPress" />
                                <button class="btn btn-primary search-btn" type="button" @onclick="SearchEntries" title="Search">
                                    <span class="bi bi-search"></span>
                                </button>
                            </div>
                        </div>

                        <!-- Active Filters Display -->
                        @if (filtersActive || HasActiveFilters())
                        {
                            <div class="active-filters mb-3">
                                <small class="text-muted d-block mb-2 fw-semibold">Active Filters:</small>
                                <div class="d-flex flex-wrap gap-2">
                                    @if (!string.IsNullOrWhiteSpace(searchTerm))
                                    {
                                        <span class="badge bg-primary filter-chip">
                                            <span class="bi bi-search me-1"></span>@searchTerm
                                            <button type="button" class="btn-close btn-close-white ms-2" style="font-size: 0.7em;" @onclick="() => { searchTerm = string.Empty; ApplyFilters(); }"></button>
                                        </span>
                                    }
                                    @if (filterStartDate.HasValue)
                                    {
                                        <span class="badge bg-info filter-chip">
                                            <span class="bi bi-calendar-event me-1"></span>From: @filterStartDate.Value.ToString("MMM dd")
                                            <button type="button" class="btn-close btn-close-white ms-2" style="font-size: 0.7em;" @onclick="() => { filterStartDate = null; ApplyFilters(); }"></button>
                                        </span>
                                    }
                                    @if (filterEndDate.HasValue)
                                    {
                                        <span class="badge bg-info filter-chip">
                                            <span class="bi bi-calendar-event me-1"></span>To: @filterEndDate.Value.ToString("MMM dd")
                                            <button type="button" class="btn-close btn-close-white ms-2" style="font-size: 0.7em;" @onclick="() => { filterEndDate = null; ApplyFilters(); }"></button>
                                        </span>
                                    }
                                    @if (!string.IsNullOrWhiteSpace(filterMood))
                                    {
                                        <span class="badge bg-success filter-chip">
                                            <span class="bi bi-emoji-smile me-1"></span>@filterMood
                                            <button type="button" class="btn-close btn-close-white ms-2" style="font-size: 0.7em;" @onclick="() => { filterMood = string.Empty; ApplyFilters(); }"></button>
                                        </span>
                                    }
                                    @if (filterTagId.HasValue)
                                    {
                                        var selectedTag = availableTags.FirstOrDefault(t => t.Id == filterTagId.Value);
                                        <span class="badge filter-chip" style="background-color: @(selectedTag?.Color ?? "#6c757d");">
                                            <span class="bi bi-tag me-1"></span>@(selectedTag?.Name ?? "Tag")
                                            <button type="button" class="btn-close btn-close-white ms-2" style="font-size: 0.7em;" @onclick="() => { filterTagId = null; filterTagIdString = string.Empty; ApplyFilters(); }"></button>
                                        </span>
                                    }
                                </div>
                            </div>
                        }

                        <!-- Date Range -->
                        <div class="filter-section">
                            <label class="filter-label">
                                <span class="bi bi-calendar-range filter-icon"></span>Date Range
                            </label>
                            <div class="row g-2">
                                <div class="col-6">
                                    <label class="form-label small text-muted mb-1">From</label>
                                    <div class="input-group">
                                        <span class="input-group-text bg-white border-end-0">
                                            <span class="bi bi-calendar3 text-muted"></span>
                                        </span>
                                        <InputDate class="form-control border-start-0" @bind-Value="filterStartDate" />
                                    </div>
                                </div>
                                <div class="col-6">
                                    <label class="form-label small text-muted mb-1">To</label>
                                    <div class="input-group">
                                        <span class="input-group-text bg-white border-end-0">
                                            <span class="bi bi-calendar3 text-muted"></span>
                                        </span>
                                        <InputDate class="form-control border-start-0" @bind-Value="filterEndDate" />
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Mood Filter -->
                        <div class="filter-section">
                            <label class="filter-label">
                                <span class="bi bi-emoji-smile filter-icon"></span>Mood
                            </label>
                            <div class="input-group">
                                <span class="input-group-text bg-white border-end-0">
                                    <span class="bi bi-emoji-smile text-muted"></span>
                                </span>
                                <InputSelect class="form-control border-start-0 ps-0" @bind-Value="filterMood">
                                    <option value="">All Moods</option>
                                    @foreach (var mood in availableMoods)
                                    {
                                        <option value="@mood">@mood</option>
                                    }
                                </InputSelect>
                            </div>
                        </div>

                        <!-- Tag Filter -->
                        <div class="filter-section">
                            <label class="filter-label">
                                <span class="bi bi-tags filter-icon"></span>Tag
                            </label>
                            <div class="input-group">
                                <span class="input-group-text bg-white border-end-0">
                                    <span class="bi bi-tag text-muted"></span>
                                </span>
                                <InputSelect class="form-control border-start-0 ps-0" @bind-Value="filterTagIdString" @bind:after="OnTagFilterChanged">
                                    <option value="">All Tags</option>
                                    @foreach (var tag in availableTags)
                                    {
                                        <option value="@tag.Id">@tag.Name</option>
                                    }
                                </InputSelect>
                            </div>
                        </div>

                        <!-- Action Buttons -->
                        <div class="filter-actions">
                            <button class="btn btn-primary btn-lg w-100 mb-2 filter-apply-btn" @onclick="ApplyFilters">
                                <span class="bi bi-funnel-fill me-2"></span>Apply Filters
                            </button>
                            <button class="btn btn-outline-secondary w-100 filter-clear-btn" @onclick="ClearFilters">
                                <span class="bi bi-x-circle me-2"></span>Clear All Filters
                            </button>
                        </div>

                        <!-- Results Summary -->
                        @if (filtersActive || HasActiveFilters())
                        {
                            <div class="results-summary">
                                <div class="d-flex align-items-center justify-content-between">
                                    <div>
                                        <small class="text-muted d-block mb-1">Results Found</small>
                                        <h3 class="mb-0 text-primary fw-bold">@totalEntries</h3>
                                        <small class="text-muted">entry@(totalEntries != 1 ? "ies" : "")</small>
                                    </div>
                                    <div class="results-icon">
                                        <span class="bi bi-file-earmark-text display-4 text-primary opacity-25"></span>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>

            <!-- Results Panel -->
            <div class="col-lg-8 col-md-7">
                <!-- Results Header -->
                <div class="card mb-4">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <h4 class="mb-1">Search Results</h4>
                                @if (filtersActive || HasActiveFilters())
                                {
                                    <p class="text-muted mb-0 small">
                                        Showing @((currentPage - 1) * pageSize + 1)-@(Math.Min(currentPage * pageSize, totalEntries)) of @totalEntries entries
                                    </p>
                                }
                                else
                                {
                                    <p class="text-muted mb-0 small">Total: @totalEntries entry@(totalEntries != 1 ? "ies" : "")</p>
                                }
                            </div>
                            <div>
                                <select class="form-select form-select-sm" @bind="pageSize" @bind:after="OnPageSizeChanged">
                                    <option value="10">10 per page</option>
                                    <option value="20">20 per page</option>
                                    <option value="50">50 per page</option>
                                    <option value="100">100 per page</option>
                                </select>
                            </div>
                        </div>
                    </div>
                </div>

                @if (isLoading)
                {
                    <div class="card">
                        <div class="card-body text-center py-5">
                            <div class="spinner-border text-primary" role="status">
                                <span class="visually-hidden">Loading...</span>
                            </div>
                            <p class="mt-3 text-muted">Searching entries...</p>
                        </div>
                    </div>
                }
                else if (entries.Any())
                {
                    <!-- Entry Cards -->
                    @foreach (var entry in entries)
                    {
                        <div class="card mb-3 shadow-sm">
                            <div class="card-header bg-light">
                                <div class="d-flex justify-content-between align-items-start">
                                    <div class="flex-grow-1">
                                        <h5 class="card-title mb-1">@entry.Title</h5>
                                        <div class="d-flex align-items-center gap-3 flex-wrap">
                                            <small class="text-muted">
                                                <span class="bi bi-calendar3 me-1"></span>
                                                @entry.EntryDate.ToString("MMMM dd, yyyy")
                                            </small>
                                            <small class="text-muted">
                                                <span class="bi bi-file-text me-1"></span>
                                                @entry.WordCount words
                                            </small>
                                            @if (entry.UpdatedAt.HasValue)
                                            {
                                                <small class="text-muted">
                                                    <span class="bi bi-pencil me-1"></span>
                                                    Updated @entry.UpdatedAt.Value.ToString("MMM dd, yyyy")
                                                </small>
                                            }
                                        </div>
                                    </div>
                                    <div class="d-flex gap-2">
                                        <button class="btn btn-sm btn-outline-primary" @onclick="() => NavigateToEntry(entry.EntryDate)" title="View/Edit">
                                            <span class="bi bi-eye"></span>
                                        </button>
                                        <button class="btn btn-sm btn-outline-danger" @onclick="() => DeleteEntry(entry)" disabled="@(isDeleting && deletingEntryId == entry.Id)" title="Delete">
                                            @if (isDeleting && deletingEntryId == entry.Id)
                                            {
                                                <span class="spinner-border spinner-border-sm"></span>
                                            }
                                            else
                                            {
                                                <span class="bi bi-trash"></span>
                                            }
                                        </button>
                                    </div>
                                </div>
                            </div>
                            <div class="card-body">
                                <!-- Moods -->
                                <div class="mb-2">
                                    <span class="badge bg-primary me-1">@entry.PrimaryMood</span>
                                    @if (!string.IsNullOrEmpty(entry.SecondaryMood1))
                                    {
                                        <span class="badge bg-secondary me-1">@entry.SecondaryMood1</span>
                                    }
                                    @if (!string.IsNullOrEmpty(entry.SecondaryMood2))
                                    {
                                        <span class="badge bg-secondary">@entry.SecondaryMood2</span>
                                    }
                                </div>

                                <!-- Tags -->
                                @if (entry.JournalEntryTags.Any())
                                {
                                    <div class="mb-3">
                                        @foreach (var entryTag in entry.JournalEntryTags)
                                        {
                                            <span class="badge me-1" style="background-color: @entryTag.Tag.Color;">@entryTag.Tag.Name</span>
                                        }
                                    </div>
                                }

                                <!-- Content Preview -->
                                <div class="entry-preview">
                                    @((MarkupString)GetMarkdownPreview(entry.Content.Length > 300 ? entry.Content.Substring(0, 300) + "..." : entry.Content))
                                </div>

                                <!-- Highlight search term if present -->
                                @if (!string.IsNullOrWhiteSpace(searchTerm))
                                {
                                    <div class="mt-2">
                                        <small class="text-muted">
                                            <span class="bi bi-info-circle me-1"></span>
                                            Matches search: "@searchTerm"
                                        </small>
                                    </div>
                                }
                            </div>
                        </div>
                    }

                    <!-- Pagination -->
                    @if (totalPages > 1)
                    {
                        <nav aria-label="Search results pagination">
                            <ul class="pagination justify-content-center">
                                <li class="page-item @(currentPage == 1 ? "disabled" : "")">
                                    <button class="page-link" @onclick="() => ChangePage(currentPage - 1)">
                                        <span class="bi bi-chevron-left"></span> Previous
                                    </button>
                                </li>
                                @for (int i = Math.Max(1, currentPage - 2); i <= Math.Min(totalPages, currentPage + 2); i++)
                                {
                                    <li class="page-item @(i == currentPage ? "active" : "")">
                                        <button class="page-link" @onclick="() => ChangePage(i)">@i</button>
                                    </li>
                                }
                                @if (currentPage + 2 < totalPages)
                                {
                                    <li class="page-item disabled">
                                        <span class="page-link">...</span>
                                    </li>
                                    <li class="page-item">
                                        <button class="page-link" @onclick="() => ChangePage(totalPages)">@totalPages</button>
                                    </li>
                                }
                                <li class="page-item @(currentPage == totalPages ? "disabled" : "")">
                                    <button class="page-link" @onclick="() => ChangePage(currentPage + 1)">
                                        Next <span class="bi bi-chevron-right"></span>
                                    </button>
                                </li>
                            </ul>
                        </nav>
                    }
                }
                else
                {
                    <div class="card">
                        <div class="card-body text-center py-5">
                            @if (filtersActive || HasActiveFilters())
                            {
                                <span class="bi bi-search display-1 text-muted d-block mb-3"></span>
                                <h5>No entries found</h5>
                                <p class="text-muted">No journal entries match your search criteria.</p>
                                <button class="btn btn-outline-primary" @onclick="ClearFilters">
                                    <span class="bi bi-x-circle me-1"></span>Clear Filters
                                </button>
                            }
                            else
                            {
                                <span class="bi bi-journal-text display-1 text-muted d-block mb-3"></span>
                                <h5>No entries yet</h5>
                                <p class="text-muted">Start writing your first journal entry!</p>
                                <button class="btn btn-primary" @onclick="NavigateToJournal">
                                    <span class="bi bi-plus-circle me-1"></span>Create Entry
                                </button>
                            }
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
}

