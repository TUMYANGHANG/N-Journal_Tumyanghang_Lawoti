@page "/journal"
@inject AuthService AuthService
@inject NavigationManager Navigation

<PageTitle>Journal - N-Journal</PageTitle>

@if (!AuthService.IsAuthenticated)
{
    <RedirectToLogin />
}
else
{
    <div class="container mt-4">
        <div class="row">
            <div class="col-12">
                <h1 class="mb-4">My Journal</h1>
                <div class="card">
                    <div class="card-body">
                        <p class="card-text">Journal entry management coming soon...</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

